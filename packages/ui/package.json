{
  "name": "@mcpsystem/ui",
  "version": "0.1.0",
  "description": "AI-first Web Components for chat interfaces and AI interactions",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:bundle": "esbuild src/index.ts --bundle --format=esm --minify --outfile=dist/mcp-ui.min.js",
    "build:all": "npm run build && npm run build:bundle",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "echo \"No tests yet\" && exit 0",
    "prepublishOnly": "npm run clean && npm run build:all"
  },
  "keywords": [
    "web-components",
    "lit",
    "ai",
    "chat",
    "mcp",
    "design-system",
    "custom-elements"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcpsystem/design"
  },
  "homepage": "https://mcpsystem.design",
  "devDependencies": {
    "esbuild": "^0.27.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "lit": "^3.1.0"
  }
}
